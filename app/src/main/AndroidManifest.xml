<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudentsApp">

        <!-- Edit Student Activity -->
        <activity
            android:name=".activities.EditStudentActivity"
            android:exported="false" />

        <!-- Student Details Activity -->
        <activity
            android:name=".activities.StudentDetailsActivity"
            android:exported="false" />

        <!-- New Student Activity -->
        <activity
            android:name=".activities.NewStudentActivity"
            android:exported="false" />

        <!-- Student List Activity (Set as the main activity) -->
        <activity
            android:name=".activities.StudentListActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
