<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light"
        tools:context=".activities.StudentDetailsActivity">

        <!-- Student Picture -->
        <ImageView
            android:id="@+id/imgStudentPic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_student_pic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="80dp"
            tools:ignore="ContentDescription" />

        <!-- Student Name -->
        <TextView
            android:id="@+id/tvStudentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name: John Doe"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_pink"
            app:layout_constraintTop_toBottomOf="@id/imgStudentPic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Student ID -->
        <TextView
            android:id="@+id/tvStudentId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ID: 123456"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/tvStudentName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Student Phone -->
        <TextView
            android:id="@+id/tvStudentPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Phone: 9876543210"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/tvStudentId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Student Address -->
        <TextView
            android:id="@+id/tvStudentAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Address: 123 Main St"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/tvStudentPhone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Edit Button -->
        <Button
            android:id="@+id/btnEditStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textStyle="bold"
            android:textColor="@color/background_light"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/primary_pink"
            app:layout_constraintTop_toBottomOf="@id/tvStudentAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Home Button -->
        <Button
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textStyle="bold"
            android:textColor="@color/background_light"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/primary_blue"
            app:layout_constraintTop_toBottomOf="@id/btnEditStudent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
